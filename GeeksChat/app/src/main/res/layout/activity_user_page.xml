<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:layout_gravity="center"
    tools:context=".UserPage"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:id="@+id/widgetuser1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:paddingBottom="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardBackgroundColor="@android:color/transparent"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="@id/widgetuser">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="start"
                android:background="@drawable/baseline_user_image"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="@dimen/_1sdp"
                android:onClick="Chat" />

            <ImageView
                android:id="@+id/logout"
                android:layout_width="55dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="end"
                android:background="@drawable/baseline_logout_24"
                android:backgroundTint="@color/white"
                android:onClick="Logout"

                ></ImageView>


            <TextView
                android:id="@+id/UName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_12sdp"
                android:text=""
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/widgetuser"
        android:layout_width="match_parent"
        android:layout_height="618dp"
        android:layout_margin="@dimen/_5sdp"
        android:paddingBottom="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_4sdp"
        tools:layout_editor_absoluteY="106dp"
        app:layout_constraintTop_toBottomOf="@id/widgetuser1"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/adduser"
            android:layout_width="55dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/baseline_adduser"
            android:backgroundTint="@color/blue"
            android:onClick="AddUser"
            android:overScrollMode="never"
            android:scrollbars="none"

            ></ImageView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
